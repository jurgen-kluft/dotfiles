[user]
name = jurgen.kluft
email = jurgen.kluft@gmail.com

[color]
diff   = auto
status = auto
branch = auto
interactive = true

[alias]
ci = commit
di = diff --color-words
st = status

[core]
editor = vim
quotepath = false
pager = delta --line-numbers --side-by-side --dark

[interactive]
diffFilter = delta --color-only

[add.interactive]
useBuiltin = false # required for git 2.37.0

[delta]
navigate = true    # use n and N to move between diff sections
light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
side-by-side = true
line-numbers = true

[merge]
conflictstyle = diff3

[diff]
colorMoved = default

[push]
default = matching

[init]
defaultBranch = master

#
# We might have a .local configuration-file which will make changes
# here - this is not tracked by git for obvious reasons.
#
[include]
path = .gitconfig.local

