#!/bin/sh
#
#  Pull from all origins.
#


#
#  Mercurial
#
if [ -d .hg ]; then
   exec hg pull
fi

#
#  Git
#
if [ -d .git ] ; then
    for i in $(git remote) ; do
        echo "Pulling from $i"
        git remote show $i  2>/dev/null| grep URL
        git pull --quiet $i 
    done
    exit 0;
fi


#
#  Abort
#
echo "Neither .git nor .hg found"
exit 1
